<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout android:id="@+id/AbsoluteLayout01" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:id="@+id/TextView01" 
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content" 
  	android:text="Full name"></TextView>
  <EditText android:id="@+id/EditText01" 
  	android:layout_height="wrap_content" 
  	android:singleLine="true" 
  	android:maxLength="20" 
  	android:layout_x="100px" 
  	android:layout_width="200px"></EditText>
  <TextView android:id="@+id/TextView02" 
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content" 
  	android:text="User name" 
  	android:layout_y="50px"></TextView>
  <EditText android:id="@+id/EditText02" 
  	android:layout_height="wrap_content" 
  	android:singleLine="true" 
  	android:maxLength="10" 
  	android:layout_x="100px" 
  	android:layout_y="50px" 
  	android:layout_width="200px"></EditText>
  <TextView android:id="@+id/TextView03" 
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content" 
  	android:text="Password" 
  	android:layout_y="100px"></TextView>
  <EditText android:id="@+id/EditText03" 
  	android:layout_height="wrap_content" 
  	android:singleLine="true" 
  	android:password="true" 
  	android:maxLength="16" 
  	android:layout_x="100px" 
  	android:layout_y="100px" 
  	android:layout_width="200px"></EditText>
  <TextView android:id="@+id/TextView04" 
  	android:layout_width="wrap_content" 
  	android:layout_height="wrap_content" 
  	android:text="Email" 
  	android:layout_y="150px"></TextView>
  <EditText android:id="@+id/EditText04" 
  	android:layout_height="wrap_content" 
  	android:singleLine="true" 
  	android:maxLength="20" 
  	android:layout_x="100px" 
  	android:layout_y="150px" 
  	android:layout_width="200px"></EditText>
  <Button android:id="@+id/Button01" 
  	android:text="Submit" 
  	android:layout_y="200px" 
  	android:layout_width="200px" 
  	android:layout_height="wrap_content" 
  	android:layout_x="50px"></Button>
  <TextView android:id="@+id/TextView05" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="输入结果" 
	android:layout_y="250px"></TextView>
</AbsoluteLayout>
