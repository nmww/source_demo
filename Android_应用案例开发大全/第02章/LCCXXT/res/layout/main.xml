<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc">
   <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="列车查询系统"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center">
    </TextView> 
   </FrameLayout>
   <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
    >
    <TextView
    	android:text="查询方式" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight">
	</TextView>
	<TextView
    	android:text="详细查询" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		>
	</TextView>
    </LinearLayout>
       <!-- 站站查询，车次查询，车站所有车次查询 以及图片模块-->
       <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<!--图片左部分 -->
    	<LinearLayout
    	android:orientation="vertical"
    	android:background="#ffcc66"
    	android:layout_marginLeft="15dip"
    	android:layout_marginBottom="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_weight="2"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent" 	
    	android:gravity="center">
    	<!-- 站站查询，车次查询 -->
	        <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_marginLeft="5dip"
	    	android:layout_marginTop="10dip"
	    	android:layout_marginBottom="15dip"
	    	android:layout_marginRight="5dip"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 	
	    	android:gravity="center">
		        <ImageButton 
				android:id="@+id/ibzzcx" 
				android:background="@drawable/zzcx_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
			    </ImageButton>
			    <ImageButton 
				android:id="@+id/ibcccx" 
				android:background="@drawable/cccx_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
				</ImageButton>
	    	</LinearLayout>
	    	<!--车站查询,附加功能 -->
	    	<LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:layout_marginTop="15dip"
	    	android:layout_marginBottom="20dip" 	
	    	android:gravity="center">
				<ImageButton 
				android:id="@+id/ibczcccx" 
				android:background="@drawable/czcx_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
				</ImageButton>
		    	<ImageButton 
				android:id="@+id/ibfjgn" 
				android:background="@drawable/fjgn_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
				</ImageButton>
	    	</LinearLayout>
	    	
	    	
	    	
	    	<LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_marginLeft="5dip"
	    	android:layout_marginTop="15dip"
	    	android:layout_marginBottom="15dip"
	    	android:layout_marginRight="5dip"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 	
	    	android:gravity="center">
		        <ImageButton 
				android:id="@+id/about_button" 
				android:background="@drawable/help_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
			    </ImageButton>
			    <ImageButton 
				android:id="@+id/help_button" 
				android:background="@drawable/about_button"
				android:layout_width="100dip" 
				android:layout_height="40dip"
				android:layout_marginRight="10dp"
				android:layout_gravity="center">
				</ImageButton>
	    	</LinearLayout>
	    	
	    	
    	</LinearLayout>
    	<!--图片模块-->
    	<LinearLayout
    	android:orientation="horizontal"
    	android:background="#ffcc66"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginBottom="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:layout_weight="1"	
    	android:gravity="center">	    	
		      <com.bn.lccx.GGView	     
		    android:layout_width="200dp"
			android:layout_height="250dp"
   		/>		
    	</LinearLayout>
       </LinearLayout>
</LinearLayout>