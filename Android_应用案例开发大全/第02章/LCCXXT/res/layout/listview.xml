<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:background="#ffffcc"
  android:layout_height="fill_parent">
  　 <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title">
    <TextView
    	android:text="列车查询系统"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center">
    </TextView> 
     </FrameLayout>
<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator">
    <TextView
    	android:text="详细资料" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight">
	</TextView>
	<TextView
    	android:text="途经车站" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold">
	</TextView>
    </LinearLayout>
	   <LinearLayout 
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:background="#ffcc99">
		   <TextView 
		   android:id="@+id/listview_detail01" 
		   android:text="车次" 
		   android:textColor="@color/red"
		   android:layout_marginLeft="18dp"
		   android:textSize="16dip"
		   android:textStyle="bold"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail02" 
		   android:text="始发站" 
		   android:textColor="@color/red"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_marginLeft="20dp"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail03" 
		   android:text="终点站" 
		   android:textSize="16dip"
		   android:textColor="@color/red"
		   android:textStyle="bold"
		   android:layout_marginLeft="11dp"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail04" 
		   android:text="列车类型" 
		   android:textColor="@color/red"
		   android:layout_marginLeft="6dp"
		   android:textStyle="bold"
		    android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail05" 
		   android:text="发站" 
		   android:textColor="@color/red"
		   android:layout_marginLeft="11dp"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail06" 
		   android:text="发时"
		   android:textColor="@color/red"
		   android:layout_marginLeft="27dp"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail07" 
		   android:text="到站" 
		   android:textColor="@color/red"
		   android:layout_marginLeft="28dp"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail08" 
		   android:text="到时" 
		   android:textColor="@color/red"
		   android:textStyle="bold"
		   android:textSize="16dip"
           android:layout_marginLeft="23dp"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   
	   </LinearLayout>

	   <ListView 
	      android:id="@+id/ListView_detail"       
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:choiceMode="singleChoice"
	      android:background="#ffcc66"	     
        android:cacheColorHint="#00000000" >
	   </ListView>


</LinearLayout>
