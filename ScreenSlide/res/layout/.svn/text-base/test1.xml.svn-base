			android:layout_height="wrap_content" android:text="sqrt"
			android:layout_weight="1" />

	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:background="#FFFFFF" android:orientation="horizontal"
		android:layout_width="match_parent">
		<Button android:id="@+id/button1" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:text=" 4"
			android:layout_weight="1" />
		<Button android:id="@+id/button2" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:text="5"
			android:layout_weight="1" />
