<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageButton1" android:src="@drawable/icon"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageButton2" android:src="@drawable/icon"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageButton3" android:src="@drawable/icon"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageButton4" android:src="@drawable/icon"></ImageButton>
<FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
<ImageButton android:layout_height="80dp" android:id="@+id/imageButton6" android:layout_width="80dp" android:src="@drawable/photo1"></ImageButton>
<ImageButton android:layout_height="60dp" android:id="@+id/imageButton5" android:layout_width="60dp" android:src="@drawable/photo2"></ImageButton>
</FrameLayout>

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
 android:id="@+id/start" android:text="start" android:src="@drawable/icon"
 ></ImageButton>
</LinearLayout>
