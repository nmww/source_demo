<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/hello" />
		
		<ViewFlipper android:id="@+id/flipper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:flipInterval="2000">
	<TextView android:text="文本  1" android:id="@+id/textView1"
		android:background="#500000"
		android:gravity="center"
		android:textSize="20px" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></TextView>
	<TextView android:text="文本  2" android:id="@+id/textView2"
		android:background="#005000"
		android:gravity="center"
		android:textSize="20px" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></TextView>
	<TextView android:text="文本  3" android:id="@+id/textView3"
		android:textSize="20px" android:layout_width="fill_parent"
		android:background="#000050"
		android:gravity="center"
		android:layout_height="wrap_content"></TextView>
		</ViewFlipper>
		
</LinearLayout>
